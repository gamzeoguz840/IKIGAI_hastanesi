<!-- ######## Page  Title End ####### -->
<!-- Main content -->
<section class="content">
    <div>
        <div class="container">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary" style="margin:auto;">
                        <div class="card-header">
                            <h3 class="card-title">Doktor Kayıt</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/doktor/doctorsignin" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">TC Numara:</label>
                                    @Html.TextBoxFor(x => x.doktortc)

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> Şifre: &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; </label>
                                    @Html.PasswordFor(x => x.doktorsifre)

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> Ad:&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>
                                    @Html.TextBoxFor(x => x.doktorad)

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Soyad:&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(x => x.doktorsoyad)

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> Bölüm:&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; </label>

                                    @Html.TextBoxFor(x => x.doktorbolum)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> Yaş: &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(x => x.doktoryas)

                                </div>


                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                                    <div style="float: right; border: 2px solid white; padding: 7px; background: #a0cc44; color: white; font-weight: bold; ">
                                        <a href="/doktor/doctorlogin" style="text-align:right; color:azure; font-weight:bold; "> Doktor Giriş</a>
                                    </div>
                                </div>
                        </form>
                    </div>

                </div>
                <!-- /.card -->
                <!-- ################# Footer Starts Here#######################--->


                <div
                        <div class="container-fluid">
                            <div class="row">
