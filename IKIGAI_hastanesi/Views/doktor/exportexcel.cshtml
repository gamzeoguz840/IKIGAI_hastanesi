@model List<IKIGAI_hastanesi.Models.hasta>


@{
    ViewBag.Title = "exportexcel";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    <script src="~/Content/assets/js/yeni.js">
    </script>
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/scroll-fixed/jquery-scrolltofixed-min.js"></script>
    <script src="~/Content/assets/js/script.js"></script>












    <meta name="viewport" content="width=device-width" />
    <title>exportexcell</title>
</head>
<body>



    <!-- ################# Our Team Starts Here#######################--->
    <!--  ************************* Page Title Starts Here ************************** -->
    <div class="page-nav no-margin row">
        <div class="container">
            <div class="row">
                <h2>IKIGAI HASTANESİ</h2>
                <ul>
                    <li> <a href="/home/index"><i class="fas fa-home"></i> Anasayfa</a></li>
                    <li><i class="fas fa-angle-double-right"></i> Kayıtlar</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- ######## Page  Title End ####### -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Hasta Kayıtları</h3>

                    <div class="card-tools">
                        <form action="/doktor/listpattient1" method="post">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="aranan" class="form-control float-right" placeholder="Ara">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap" id="dataTable">
                        <thead>
                            <tr>
                                <th>Sıra No</th>
                                <th>Ad Soyad</th>
                                <th>TC</th>
                                <th>Doğum Yılı</th>
                                <th>Bölüm</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{

                                if (Model != null && Model.Count > 0)
                                {

                                    foreach (var hasta in Model)
                                    {
                                        <tr>
                                            <td>@hasta.hastaid</td>
                                            <td>@hasta.hastaad @hasta.hastasoyad</td>
                                            <td>@hasta.hastatc</td>
                                            <td>@hasta.hastadogum</td>
                                            <td>@hasta.hastabolum</td>

                                            <td>
                                                <div class="btn-group">
                                                    <a href="/doktor/doctorselect/@hasta.hastaid" class="btn btn-success"> Ekle</a>

                                                </div>




                                        </tr>


                                    }
                                }




                            }






                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <button class="btn btn-primary" onclick="btnExport"> Export To Excel</button>

</body>
</html>
<input type="submit" id="btnExport" value="Export" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/Content/assets/js/table2excel.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnExport").click(function () {
            $("#tblCustomers").table2excel({
                filename: "Table.xls"
            });
        });
    });
</script>